{
  "name": "fe-cli",
  "version": "0.0.1",
  "description": "搭建适合自己的脚手架：实现项目初始化和项目自动化发布两大核心功能。",
  "main": "./src/index.ts",
  "bin": {
    "fe": "./bin/index.js"
  },
  "scripts": {
    "dev:comment": "启动开发环境",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build:comment": "构建",
    "build": "npm run eslint && npm run prettier && rm -rf lib && tsc --build",
    "eslint:comment": "使用 ESLint 检查并自动修复 src 目录下所有扩展名为 .ts 的文件",
    "eslint": "eslint --fix src --ext .ts --max-warnings=0",
    "prettier:comment": "自动格式化 src 目录下的所有 .ts 文件",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luozyiii/fe-cli.git"
  },
  "keywords": [
    "fe-cli"
  ],
  "author": "leslie",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/luozyiii/fe-cli/issues"
  },
  "homepage": "https://github.com/luozyiii/fe-cli#readme",
  "dependencies": {
    "import-local": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.6",
    "eslint": "^8.20.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^2.7.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  }
}
